    "s3o-middleware": "^1.8.0"
  },
  "devDependencies": {
    "@financial-times/eslint-config-de-tooling": "^2.0.2",
    "eslint": "^4.9.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-plugin-prettier": "^2.3.1",
    "husky": "^0.14.3",
